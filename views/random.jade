extends layout

block content
  .container

      .jumbotron
        div
          table
            thead

             h1  Artist Details
             h2 !{json.fc}
             p  !{json.date}
             p  Born: !{json.birth.place.name}
             p Total works:
              a(href='/artworks/' + json.id) !{json.totalWorks} - View Artwork
             p For more information about this artist visit:
              a(href= json.url) This page
